doctype html
html
	head
		meta(charset="UTF-8")

		title
			| #{title}

		meta(name="viewport",content="width=device-width, initial-scale=1.0")
		meta(name="apple-mobile-web-app-status-bar-style",content="black-translucent")
		meta(name="apple-mobile-web-app-capable",content="yes")

		link(rel="apple-touch-icon",href="/images/icon60.png")
		link(rel="apple-touch-icon",sizes="76x76",href="/images/icon76.png")
		link(rel="apple-touch-icon",sizes="120x120",href="/images/icon60@2x.png")
		link(rel="apple-touch-icon",sizes="152x152",href="/images/icon76@2x.png")
		link(rel="apple-touch-startup-image",href="/images/startup.jpg")

		//jQuery
		script(type="text/javascript",src="http://code.jquery.com/jquery-2.1.0.min.js")

		//Bootstrap
		script(src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js")
		link(href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css", rel="stylesheet")

		//jqWidgets
		script(type="text/javascript",src="http://jqwidgets.com/public/jqwidgets/jqx-all.js")
		link(rel="stylesheet",href="http://jqwidgets.com/public/jqwidgets/styles/jqx.base.css",type="text/css")
		link(rel="stylesheet",href="http://jqwidgets.com/public/jqwidgets/styles/jqx.bootstrap.css",type="text/css")

		script(src="/socket.io/socket.io.js")
		link(href="/css/style.css" rel="stylesheet",type="text/css")
		script(type="text/javascript",src="/js/system.js")

		block script
	body
		div.visible-xs.visible-sm(style="height: 20px;")
			| &nbsp;
		div.container-fluid
			include menu
			block content