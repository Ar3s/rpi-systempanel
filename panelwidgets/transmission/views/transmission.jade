script(type="text/javascript").
	function callbackTransmissionFunc(data)
	{
		$('##{user_widget.id_html} .panel-body').html(data);
	}

	$(document).ready(function () {
		$('##{user_widget.id_html} .btnTransPlay').click(function () {
		$.sendPostDataToWidget(socket, #{user_widget.id}, '#{sid}', { sta: true });
		});

		$('#@(model.user_widget.id_html) .btnTransStop').click(function () {
			$.sendPostDataToWidget(socket, #{user_widget.id}, '#{sid}', { sto: true });
		});

		setTimeout(function () {
			$.startUpdatingWidgetHtml(socket, #{user_widget.id}, '#{sid}', callbackTransmissionFunc, null);
		}, #{user_widget.widget.updatetime});
	});